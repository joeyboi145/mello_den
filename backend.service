[Unit]
Description=Mello Den Backend Service

[Service]
ExecStart=/home/joey/mello_den/backend.js
Restart=always
User=nobody
# Note Debian/Ubuntu uses 'nogroup', RHEL/Fedora uses 'nobody'
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/home/joey/mello_den

[Install]
WantedBy=multi-user.target